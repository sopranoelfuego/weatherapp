{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "esModuleInterop": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "incremental": true,
      "skipLibCheck": true,
      "paths": {
          "@*": ["./*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}